fun edadest(){
    println("¿Cuantos alumnos hay en el salón?") // por Sebastian David leer edadde un grupo de alumnos y encontrar el mayor y menor||21/03 a 22/03 creación
    var menor = 10000
    var mayor = -1
    var alumnos = readln()!!.toInt()
    println("Ingrese sus edades")
    for ( a in 1 .. alumnos){
        var edad = readln()!!.toInt()
        if (edad <= menor){
            mayor = edad
        }
        if (edad >= mayor){
            menor = edad
        }
    }
    println("Edad máxima: $mayor")
    println("Edad mínima: $menor")

}
fun main() {
    edadest()
}
